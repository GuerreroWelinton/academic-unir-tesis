{
  "name": "zg-ui",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "build": "ng build",
    "build:ui": "ng build ui",
    "build:design-tokens": "ng build design-tokens",
    "build:all": "npm run build && npm run build:ui && npm run build:design-tokens",
    "test": "ng test",
    "test:once": "ng test --watch=false",
    "test:coverage": "ng test --coverage",
    "test:ui": "ng test ui",
    "test:ui:coverage": "ng test ui --coverage",
    "test:design-tokens": "ng test design-tokens",
    "test:design-tokens:coverage": "ng test design-tokens --coverage",
    "coverage:all": "npm run test:ui:coverage && npm run test:design-tokens:coverage",
    "lint": "ng lint",
    "format": "prettier --write \"**/*.{ts,js,html,css,scss,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,js,html,css,scss,md,json}\"",
    "storybook": "ng run ui:storybook",
    "build-storybook": "ng run ui:build-storybook",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "docs:ui": "cd projects/ui && compodoc -p tsconfig.lib.json -d ../../docs/ui --theme material",
    "docs:ui:serve": "cd projects/ui && compodoc -p tsconfig.lib.json -d ../../docs/ui --theme material --serve",
    "docs:design-tokens": "cd projects/design-tokens && compodoc -p tsconfig.lib.json -d ../../docs/design-tokens --theme material",
    "docs:design-tokens:serve": "cd projects/design-tokens && compodoc -p tsconfig.lib.json -d ../../docs/design-tokens --theme material --serve",
    "ci:local": "npm run lint && npm run format:check && npm run test:once && npm run build:all && npm run build-storybook",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,css,scss,md,json}": [
      "prettier --write"
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.2101.0",
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular-devkit/core": "^21.1.0",
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.0",
    "@chromatic-com/storybook": "^5.0.0",
    "@compodoc/compodoc": "^1.2.1",
    "@ng-icons/core": "^33.1.0",
    "@ng-icons/lucide": "^33.1.0",
    "@storybook/addon-a11y": "^10.2.4",
    "@storybook/addon-docs": "^10.2.4",
    "@storybook/angular": "^10.2.4",
    "@storybook/jest": "^0.2.2",
    "@storybook/testing-library": "^0.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "angular-eslint": "21.2.0",
    "chromatic": "^15.1.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.7",
    "ng-packagr": "^21.1.0",
    "prettier": "^3.8.1",
    "storybook": "^10.2.4",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.50.1",
    "vitest": "^4.0.8"
  }
}
